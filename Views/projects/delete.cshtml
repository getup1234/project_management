@model Project_management.Models.Project

<h1>Delete Project</h1>

<div>
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>Nom:</strong> @Model.Name</p>
   
</div>

<hr />

<form method="post" action="@Url.Action("DeleteConfirm", "Projects", new { id = Model.Id })" onsubmit="return confirm('Are you sure you want to delete this project?');">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit">Delete</button>
    <a href="@Url.Action("Index", "Projects")">Cancel</a>
</form>

