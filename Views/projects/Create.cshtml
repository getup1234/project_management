@model Project_management.Models.Project

<h1>Create New Project</h1>

<form asp-action="Add" method="post" class="form">
    <div class="mb-3">
        <label for="title" class="form-label">Name:</label>
        <input asp-for="@Model.Name" id="title" class="form-control" />
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>


<hr />

<a href="@Url.Action("Index", "projects")" class="btn btn-secondary">Back to List</a>
